<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:angle="315" android:endColor="#6e54f7" android:startColor="#c847f4" android:type="linear" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:angle="315" android:endColor="#353535" android:startColor="#353535" android:type="linear" />
        </shape>
    </item>
</selector>