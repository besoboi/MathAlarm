<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_switch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/primary_linear</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/white</item>
    </style>
    <style name="time_picker" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="colorAccent">@color/primary_linear</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="day_toggle_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ic_toggle_button</item>
    </style>
    <style name="OptionTextStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="QuestionTextStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>